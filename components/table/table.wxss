/* components/table.wxss */
.table {
  color: #ffffff;
}

.table-header {
  display: flex;
  color: #ffffff;
  width: max-content;
  background: #303030 !important;
  border-top: 0.2px solid rgba(255, 255, 255, 0.3);
  font-size: 28rpx;
  height: 52rpx;

  /* padding-right: 12rpx; */
  align-items: center;
}
table-header-stick {
  position: sticky;
  top: 60rpx;
  z-index: 20000;
  background: red;
}
.table-row-item {
  min-width: 200rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 76rpx;
  padding-left: 32rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
/* 表头 */
.table-header-item {
  font-size: 28rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 32rpx;
  min-width: 200rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
}

.table-body {
  display: flex;
  width: max-content;
  overflow-y: auto;
  height: 1000rpx;
  flex-direction: column;
}
.scroll_view_X{
  width: 100%;
}
.table-row-singgular {
  height: 76rpx;
  display: flex;
  min-width: 200rpx;
  background: #222222;
}

