/* 遮罩层 */
.overLay-inner {
  position: absolute;
  right: 16rpx;
  top: 200rpx;
  width: 576rpx;
  height: 156rpx;
  background: #2d2d2d;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.overLay-inner-item {
  width: 100rpx;
  height: 100rpx;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.overLay-inner-itemImage {
  width: 48rpx;
  height: 48rpx;
}
.fodder {
  color: rgba(255, 255, 255, 0.3);
}
